/**
 * This ruleset enforces a security model based on user ownership and a dedicated
 * role-based access control (RBAC) system for Public Health Inspectors (PHIs).
 *
 * Core Philosophy:
 * The security model is designed for high performance and clarity by strictly
 * adhering to two main principles: Authorization Independence and Structural
 * Segregation. Authorization decisions rely on data denormalized directly onto
 * the documents being secured, avoiding slow and costly cross-document `get()`
 * calls in rules.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * Returns true if the user is a Public Health Inspector (PHI).
     * Now includes a fallback for the hardcoded admin email used in the UI.
     */
    function isPhi() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_phi/$(request.auth.uid)) ||
        request.auth.token.email == 'admin@aedesguard.com'
      );
    }

    function isExistingOwner(ownerId) {
      return isOwner(ownerId) && resource != null;
    }

    // ----------------------------------------------------------------------
    // Collection Rules
    // ----------------------------------------------------------------------

    match /userProfiles/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId) && resource != null && request.resource.data.id == resource.data.id;
      allow delete: if isOwner(userId) && resource != null;
    }

    match /roles_phi/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    match /surveillanceSamples/{sampleId} {
      // PHIs can read everything (including pending/appealed).
      allow read: if isPhi();
      
      // All users (including public) can read approved or un-appealed samples.
      // We use 'in' with a specific order that we'll match in the application code.
      allow read: if resource.data.submissionAppealStatus in ['none', 'approved'];

      allow create: if isSignedIn() && request.resource.data.uploaderId == request.auth.uid;
      allow update: if isExistingOwner(resource.data.uploaderId) || isPhi();
      allow delete: if isExistingOwner(resource.data.uploaderId);
    }

    match /phiAlerts/{alertId} {
      allow get, list: if isPhi();
      allow create: if false;
      allow update: if isPhi() && resource != null;
      allow delete: if false;
    }

    match /neutralizationVerifications/{verificationId} {
      allow get: if (isOwner(resource.data.verifierId) && resource != null) || isPhi();
      allow list: if isPhi();
      allow create: if isSignedIn() && request.resource.data.verifierId == request.auth.uid;
      allow update: if (isExistingOwner(resource.data.verifierId) && request.resource.data.verifierId == resource.data.verifierId) || isPhi();
      allow delete: if isExistingOwner(resource.data.verifierId);
    }
    
    match /district_health_reports/{reportId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isPhi();
    }
    
    match /district_risks/{districtName} {
      allow read: if true;
      allow write: if isPhi();
    }
  }
}
