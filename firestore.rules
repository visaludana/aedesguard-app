rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // HELPER FUNCTIONS
    // ----------------------------------------------------------------------

    /** Check if the request is authenticated */
    function isSignedIn() {
      return request.auth != null;
    }

    /** Check if the authenticated user is the owner of the document */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /** 
     * Check if the authenticated user is a Public Health Inspector (PHI).
     * Includes a check for the specialized admin email.
     */
    function isPhi() {
      return isSignedIn() && (
        exists(/databases/$(database)/documents/roles_phi/$(request.auth.uid)) ||
        request.auth.token.email == 'admin@aedesguard.com'
      );
    }

    /** Helper to check ownership based on a specific field in the existing document */
    function isDocumentOwner(ownerField) {
      return isSignedIn() && resource != null && resource.data[ownerField] == request.auth.uid;
    }

    // ----------------------------------------------------------------------
    // COLLECTION RULES
    // ----------------------------------------------------------------------

    match /userProfiles/{userId} {
      allow get: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      allow list, delete: if false; // Profiles are never listed publicly and rarely deleted
    }

    match /roles_phi/{userId} {
      allow get: if isOwner(userId); // Users can check if they themselves are PHIs
      allow read, write: if false; // Role assignments are managed externally or manually
    }

    match /surveillanceSamples/{sampleId} {
      /**
       * Unified read rule to satisfy dashboard queries.
       * Allows:
       * 1. PHIs to read all surveillance data.
       * 2. Owners to read their own reports (even pending).
       * 3. Anyone (including public) to read verified/neutralized reports.
       */
      allow read: if isPhi() || 
                     (isSignedIn() && resource.data.uploaderId == request.auth.uid) || 
                     (resource.data.submissionAppealStatus in ['none', 'approved']);

      allow create: if isSignedIn() && request.resource.data.uploaderId == request.auth.uid;
      allow update: if isDocumentOwner('uploaderId') || isPhi();
      allow delete: if isDocumentOwner('uploaderId');
    }

    match /phiAlerts/{alertId} {
      allow read: if isPhi();
      allow create: if false; // Alerts are generated by system/AI flows
      allow update: if isPhi();
      allow delete: if false;
    }

    match /neutralizationVerifications/{verificationId} {
      allow read: if isPhi() || (isSignedIn() && resource.data.verifierId == request.auth.uid);
      allow create: if isSignedIn() && request.resource.data.verifierId == request.auth.uid;
      allow update: if isDocumentOwner('verifierId') || isPhi();
      allow delete: if isDocumentOwner('verifierId');
    }
    
    match /district_health_reports/{reportId} {
      allow read: if isSignedIn(); // All logged-in users can see health stats
      allow create, update, delete: if isPhi(); // Only officers can manage stats
    }
    
    match /district_risks/{districtName} {
      allow read: if true; // Risk data is public
      allow write: if isPhi(); // Only officers (or AI via officer auth) update risk
    }
  }
}